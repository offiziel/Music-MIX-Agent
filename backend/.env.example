# Server Configuration
PORT=3001
NODE_ENV=development

# AI Provider Selection
# Wähle 'claude' oder 'gemini'
AI_PROVIDER=claude

# Claude AI API (für AI_PROVIDER=claude)
# Hole deinen Key von: https://console.anthropic.com
ANTHROPIC_API_KEY=your_anthropic_api_key_here

# Google Gemini API (für AI_PROVIDER=gemini)
# KOSTENLOS: 1.500 Requests/Tag im Free Tier!
# Hole deinen Key von: https://aistudio.google.com/apikey
GEMINI_API_KEY=your_gemini_api_key_here

# Audio Processing
MAX_FILE_SIZE=100000000
ALLOWED_FORMATS=wav,mp3,flac,aif,aiff

# CORS
FRONTEND_URL=http://localhost:5173

# Target Mastering Values
TARGET_LUFS=-10.0
TARGET_CEILING=-0.1
